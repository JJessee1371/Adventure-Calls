<!-- Content container -->
<section class="container">
    <div class="row">
        <div class="col s12 m12 l6 xl6">
            <!-- Contact card -->
            <div class="card">
                <div class="card-image">
                    <img id="contact-img" src="Images/forest.jpg" alt="Sunlight filtering through trees over a pathway">
                    <span class="card-title">Park contacts</span>
                </div>
                <div id="contacts" class="card-content green darken-2 textwhite">
                    <p id="phone">Phone</p>
                    <p id="email">Email</p>
                    <p id="address1"></p>
                    <p id="address2"></p>
                </div>
            </div>
        </div>
        <div class="col s12 m12 l6 xl6">
            <!-- General info card -->
            <div class="card">
                <div class="card-image">
                    <img src="Images/Teton.jpg" alt="Barn on sagebrush prairie with the Teton mountain range in the background">
                    <span class="card-title">General Information</span>
                </div>
                <div id="gen-info" class="card-content green darken-2 textwhite">
                    <p id="advisory" class="bold">Travel Advisories:</p>
                </div>
                <div class="card-action green darken-1">
                    <a id="park-site" class="url" href="">NPS Park Site</a>
                </div>
            </div>
        </div>
        <div class="col s6 m12 l6 xl6">
            <!-- Climate Card -->
            <div class="card">
                <div class="card-image">
                    <img src="Images/Img6.jpg" alt="Aerial view of clouds during sunset">
                    <span class="card-title">Park Climate</span>
                </div>
                <div id="sun-info" class="card-content green darken-2 textwhite">
                    <p class="weather-snippet">Weather Snippet</p>
                    <p class="sunrise">Sunrise</p>
                    <p class="sunset">Sunset</p>
                    <p class="day-length">Daylight Hours</p>
                </div>
            </div>
        </div>
        <div class="col s12 m12 l6 xl6">
            <!-- Contact card -->
            <div class="card">
                <div class="card-image">
                    <img id="directions-img" src="Images/redrock.jpg" alt="Redrock hills with yellow and green trees in the foreground">
                    <span class="card-title">Directions</span>
                </div>
                <div class="card-content green darken-2 textwhite">
                    <p id="directions"></p> 
                </div>
                <div class="card-action green darken-1">
                    <a id="directionsurl" class="url" href="">Get directions!</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container">
    <div class="row">
        <div class="col s12 m12 l6 xl6">
            <div class="container canter">
                <!-- Activites collection -->
                <div class="collection">
                    <ul class="collection with-header border">
                        <li id="activity-header" class="collection-header"><h2>All general activites</h2></li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="activity-desc" class="col s12 m12 l6 xl6">
            <h2 class="recommended">Recommended activites (if available)</h2>
        </div>
    </div>
</section>
                                        
<section class="container canter">
    <!-- Entrance collection -->
    <div class="collection">
        <ul class="collection with-header border">
            <li id="fees-header" class="collection-header"><h2>Entrance Fees</h2></li>
        </ul>
    </div>
</section>